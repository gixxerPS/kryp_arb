{
  "name": "bot",
  "version": "0.1.0",
  "description": "krypto arbitrage bot",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src test --ext .ts,.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "node dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "npm run build && node --test dist/test",
    "test:one": "node --test test/collector/*.test.js",
    "test_debug": "node --inspect-brk --test",
    "test:debug:one": "node --inspect-brk --test test/collector/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gixxerPS/kryp_arb.git"
  },
  "keywords": [
    "krypto",
    "arbitrage",
    "bot"
  ],
  "author": "db",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.13.0"
  },
  "bugs": {
    "url": "https://github.com/gixxerPS/kryp_arb/issues"
  },
  "homepage": "https://github.com/gixxerPS/kryp_arb#readme",
  "dependencies": {
    "dotenv": "^17.2.3",
    "node-telegram-bot-api": "^0.67.0",
    "pg": "^8.11.5",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
