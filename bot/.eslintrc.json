{
    "root": true,
    "env": {
      "node": true,
      "es2022": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": ["dist"],
    "rules": {
      "quotes": ["error", "single", { "avoidEscape": true }],
      "semi": ["error", "always"]
    }
  }
  